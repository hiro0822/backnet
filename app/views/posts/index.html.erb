<div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-8 offset-md-1">
       <h1>投稿一覧</h1>
        <p><%=link_to "新規投稿",new_post_path %></p>
        <table class="table table-hover table-inverse">
         <thead>
          <tr>
            <th>タイトル</th>
            <th>本文</th>



          </tr>
         </thead>
         <tbody>
          <% @posts.each do |posts| %>
          <tr>
            <td><%=link_to user_user_path(posts.user.id) do %>
             <%= image_tag posts.user.get_profile_image(80,80)%>
             <%end%>
            </td>
            <td><%=link_to posts.title,post_path(posts.id)%></td>
            <td><%=link_to posts.body%></td>
          </tr>
          <%end%>
         </tbody>
        </table>
   </div>
  </div>
</div>