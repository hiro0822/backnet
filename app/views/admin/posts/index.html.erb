<div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-8 offset-md-1">
       <h1>投稿一覧</h1>

        <table class="table table-hover table-inverse">
         <thead>
          <tr>
            <th></th>
            <th>タイトル</th>
            <th>本文</th>



          </tr>
         </thead>
         <tbody>
          <% @posts.each do |posts| %>
          <tr>
            <td><%=link_to admin_user_path(posts.user.id) do %>
             <%= image_tag posts.user.get_profile_image(80,80)%>
             <%end%>
            </td>
            <td><%=link_to posts.title,admin_post_path(posts.id)%></td>
            <td><%=link_to posts.body.truncate(20)%></td>
          </tr>
          <%end%>
         </tbody>
        </table>
        <%= paginate @posts %>
   </div>
  </div>
</div>