<div class="container">
  <div class="row my-5">
    <h2>会員情報編集</h2>
  </div>

  <%= form_with model: @user,url: admin_user_path do |f| %>
   <div class="row my-4">
     <div class="col-2">会員ID</div>
     <div class="col-3"><%= @user.id %></div>
   </div>

   <div class="row mt-2">
     <div class="col-2">名前</div>
     <div class="col-3"><%=f.text_field :nickname %></div>
   </div>

   <div class="row mt-2">
      <div class="col-2">メールアドレス</div>
      <div class="col-3"><%= f.text_field :email %></div>
   </div>

   <div class="row mt-2">
      <div class="col-2">自己紹介文</div>
      <div class="col-3"><%= f.text_area :introduction,size:  %></div>
   </div>

   <div class="row mt-2 mb-4">
     <div class="col-2">ユーザーステータス</div>
     <div class="col-3">
       <%=f.radio_button :is_deleted,false%>有効  <%= f.radio_button :is_deleted,true %>退会
     </div>
   </div>
   <div class="row my-5">
      <div class="col-2"></div>
      <div class="col-3"><%= f.submit "変更を保存", class: "btn btn-success" %></div>
   </div>
    <% end %>
</div>