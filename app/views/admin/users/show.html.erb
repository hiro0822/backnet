<div class="container">

  <div class="row mt-4">
    <h2><%=@user.nickname %></h2>
  </div>

  <div class="row mt-3">
    <div class="col-2">ID</div>
    <div class="col-3"><%=@user.id %></div>
  </div>

  <div class="row mt-3">
    <div class="col-2">名前</div>
    <div class="col-3"><%=@user.nickname %></div>
  </div>

  <div class="row mt-3">
    <div class="col-2">メールアドレス</div>
    <div class="col-3"><%=@user.email %></div>
  </div>

  <div class="row mt-3">
    <div class="col-2">自己紹介文</div>
    <div class="col-3"><%=@user.introduction %></div>
  </div>
  <div class="row mt-2 mb-4">
    <div class="col-2">会員ステータス</div>
      <div class="col-3">
        <% if @user.is_deleted == false %>
          <p class="text-success">有効</p>
        <% else %>
          <p class="text-secondary">退会</p>
        <% end %>
      </div>
  </div>
  <div class="row">
    <div class="col-3"><%=link_to "編集",edit_admin_user_path,class: "btn btn-success"%></div>
    <div class="col-3"><%=link_to "TOP",admin_root_path,class: "btn btn-primary"%></div>
  </div>

</div>
