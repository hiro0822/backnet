<div class="mx-auto" style="width: 200px;">
<h2 class="my-5">グループ作成</h2>

<%= form_with url: chatgroups_path, model: @chatgroup do |f| %>
<%= text_field_tag 'chatgroup[user_ids][]', "#{current_user.id}", type: 'hidden' %>
<%=f.label "グループ画像"%>
<%= f.file_field :group_image, accept: "image/*" %>
<h4>グループ名</h4>
<%=f.text_field :group_name %>
<h4>グループ概要</h4>
<%=f.text_area :introduction,style: "width: 200%; height: 200px;" %>

<%=f.submit'新規作成',class:"btn btn-success"%>
<%end%>
</div>