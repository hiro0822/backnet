

<h1>ユーザー情報編集</h1>

<%= form_with model: @user,url: user_user_path(@user.id),method: :put do |f| %>

<%= f.label "ニックネーム" %>
<%= f.text_field :nickname %>

<%= f.label "自己紹介文" %>
<%= f.text_field :introduction %>

<%= f.label "メールアドレス" %>
<%= f.text_field :email %>

<%= f.submit "編集内容を保存",class: "btn btn-success" %>
<%= link_to "退会", user_unsubscribe_path, class: "btn btn-danger"%>
<% end %>