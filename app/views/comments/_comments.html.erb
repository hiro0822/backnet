<% posts.comments.each do |comment| %>
<tr>
  <td>
    <%=link_to user_user_path(current_user) do %>
    <%=image_tag comment.user.get_profile_image(80,80)%><br>
    <%=comment.user.nickname %>
    <%end%>
  </td>
  <td><%=comment.comment %></td>
  <% if @post.user==current_user %>
  <td><%=link_to"削除",post_comment_path(comment.post,comment),method: :delete,class: "btn btn-sm btn-danger"%></td>

</tr>
<%end%>
<%end%>